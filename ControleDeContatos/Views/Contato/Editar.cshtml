@model ContatoModel
@{
    ViewData["Title"] = "Editar contato";
}

<div>
    <div class="d-grid gap-2 d-md-flex justify-content-md-between py-4 align-items-md-center">
        <h1 class="display-4 fs-2">Editar contato</h1>

        <a role="button" class="btn border" asp-controller="Contato" asp-action="Index">
            <i class="bi bi-arrow-left"></i>
            Voltar
        </a>
    </div>

    <form asp-controller="Contato" asp-action="Alterar" method="POST">
        <input type="hidden" asp-for="Id">

        <div class="mb-3">
            <label for="nome" class="form-label">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" id="nome">
            @Html.ValidationMessageFor(x => x.Nome)
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">E-mail</label>
            <input type="text" asp-for="Email" class="form-control" id="email">
            @Html.ValidationMessageFor(x => x.Email)
        </div>

        <div class="mb-3">
            <label for="celular" class="form-label">Celular</label>
            <input type="text" asp-for="Celular" class="form-control" id="celular">
            @Html.ValidationMessageFor(x => x.Celular)
        </div>

        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>
</div>